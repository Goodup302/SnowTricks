{% extends 'base.html.twig' %}
{% import "macro/trick.html.twig" as figure_card %}

{% block title %}Accueil{% endblock %}

{% block wallpaper %}
    <div id="wallpaper">
        <img src="{{ asset('image/snowboard-wallpaper.jpg') }}">
        <a href="#content">
            <div class="wallpaper_body">
                <h2>Bienvenue sur la communauté SnowTricks</h2>
            </div>
        </a>
        <a href="#content"><i class="arrow_down fas fa-angle-down"></i></a>
    </div>
{% endblock %}

{% block body %}
    {#ERROR MESSAGE#}
    {% for message in app.flashes('error') %}
        <div class="fixed_popup toast" data-delay="5000" data-animation="true" data-autohide="false" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="mr-auto">Erreur</strong>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">
                <span style="color: red">{{ message }}</span>
            </div>
        </div>
    {% endfor %}



    {#ARROW UP#}
    <a href="#tricks" id="arrow_up" style="display: none">
        <i class="fas fa-angle-up"></i>
    </a>

    {#BUTTON OPEN MODAL CREATE TRICK#}
    {% if app.user %}
        <div class="col-12">
            <div class="button_new" data-toggle="modal" data-target="#new_trick_modal">
                <i class="fas fa-plus"></i>
                <span>Ajouter une trick</span>
            </div>
        </div>

    {% endif %}

    {#Liste Des trick#}
    <div id="tricks" class="row">
        {% for trick in tricks %}
            {{ figure_card.show(trick) }}
        {% endfor %}
    </div>

    {#MODAL ADD Trick#}
    <div id="new_trick_modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modal_video_label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Ajout d'une figure</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form type="post" action="{{ path('trick.new') }}">
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" placeholder="Donner un nom à la figure">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn-primary btn">Créer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}