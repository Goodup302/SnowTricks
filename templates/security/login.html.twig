{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="pt-4 row justify-content-md-center">
        <div class="px-3">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        </div>

        <div class="col-12 text-center">
            <h1 class="font-weight-normal">Se connecter</h1>
            <p>Veuillez remplire les champs suivant pour vous connecter sur le site</p>
        </div>

        <div class="col-md-10 mb-3">
            <div class="dropdown-divider"></div>
        </div>

        <div class="col-md-8">
            <form method="post">
                <div class="form-group">
                    <label for="inputUsername" class="required">Pseudo</label>
                    <input type="text" id="inputUsername" value="{{ last_username }}" name="_username" maxlength="32" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="required">Mot de passe</label>
                    <input type="password" id="inputPassword" name="_password" class="form-control" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-success" type="submit">Se connecter</button>
                <a class="btn btn-lg btn-primary" href="{{ path('register') }}">S'enregistrer</a>
            </form>
        </div>
    </div>
{% endblock %}
